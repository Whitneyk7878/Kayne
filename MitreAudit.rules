-a always,exit -F path=/usr/bin/puppet      -F perm=x -F auid>=1000 -F auid!=4294967295 -k ta0002_deployment
-a always,exit -F path=/usr/bin/chef-client -F perm=x -F auid>=1000 -F auid!=4294967295 -k ta0002_deployment
