-a always,exit -F path=/bin/bash         -F perm=x -F auid>=1000 -F auid!=4294967295 -k ta0002_shell
-a always,exit -F path=/usr/bin/bash     -F perm=x -F auid>=1000 -F auid!=4294967295 -k ta0002_shell
-a always,exit -F path=/bin/dash         -F perm=x -F auid>=1000 -F auid!=4294967295 -k ta0002_shell
-a always,exit -F path=/bin/zsh          -F perm=x -F auid>=1000 -F auid!=4294967295 -k ta0002_shell

-a always,exit -F path=/usr/bin/python   -F perm=x -F auid>=1000 -F auid!=4294967295 -k ta0002_python
-a always,exit -F path=/usr/bin/python3  -F perm=x -F auid>=1000 -F auid!=4294967295 -k ta0002_python
-a always,exit -F path=/usr/bin/perl     -F perm=x -F auid>=1000 -F auid!=4294967295 -k ta0002_perl
